<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <title>Fibonacci Teste</title>
</head>
<body>
    <h2>Fibonacci (Recursivo x Iterativo)</h2>

    <label>Digite um n√∫mero N:</label>
    <input type="number" id="num" value="10">
    <button onclick="calcular()">Calcular</button>

    <h3 id="rec"></h3>
    <h3 id="iter"></h3>

    <script>
        function fibRecursivo(n) {
            if (n <= 1) return n;
            return fibRecursivo(n - 1) + fibRecursivo(n - 2);
        }

        function fibIterativo(n) {
            if (n <= 1) return n;
            let a = 0, b = 1, c;
            for (let i = 2; i <= n; i++) {
                c = a + b;
                a = b;
                b = c;
            }
            return b;
        }

        function calcular() {
            let n = parseInt(document.getElementById("num").value);

            document.getElementById("rec").innerText =
                "Recursivo: " + fibRecursivo(n);

            document.getElementById("iter").innerText =
                "Iterativo: " + fibIterativo(n);
        }
    </script>
</body>
</html>
